@using Nop.Plugin.Misc.AdvRedirect.Models;
@model ConfigurationModel


@{
    Layout = "_ConfigurePlugin";
}

<link rel="stylesheet" href="~/Plugins/Misc.AdvRedirect/Content/styles.css" />

<form asp-controller="AdvRedirect" asp-action="AddRedirection" method="post">
	 <div class="form-group row">
		<div class="col-md-3">
			<nop-label asp-for="Url" />
		</div>
		<div class="col-md-9">
			<nop-editor asp-for="Url" />
			<span asp-validation-for="Url"></span>
		</div>
	</div>
	<div class="form-group row">
		<div class="col-md-3">
			<nop-label asp-for="newUrl" />
		</div>
		<div class="col-md-9">
			<nop-editor asp-for="newUrl" />
			<span asp-validation-for="newUrl"></span>
		</div>
	</div>
	 <div class="form-group row">
		<div class="col-md-9 offset-md-3">
			<button type="submit" name="save" class="btn btn-primary">@T("Admin.Common.Save")</button>
		</div>
	</div>
</form>
<br />
<br />
@foreach(var r in Model.Redirections)
{
	<div>@(r.Key + "-" + r.Value)</div>
	<form asp-controller="AdvRedirect" asp-action="RemoveRedirection" method="post">
		<input type="hidden" value="@r.Key" name="url">
		<button type="submit"  class="btn btn-primary">@T("Admin.Common.Remove")</button>
	</form>
	<br />
}